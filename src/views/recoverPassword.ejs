<%- include ('./partials/header') -%>
<title>Touchcore HRM | Reset Password</title>
  </head>
  <body>
<div id="wrapper">
		<div class="vertical-align-wrap">
			<div class="vertical-align-middle auth-main">
				<div class="auth-box">
                    <div class="top">
                        <img src="/images/touchcore-logo-white.png" alt="Touchcore HRM">
                    </div>
					<div class="card">
                        <div class="header">
                            <p class="lead">Recover my password</p>
                        </div>
                        <div class="body">
                            <p>Please enter your email address below to receive instructions for resetting password.</p>
                            <form class="form-auth-small" action="/auth/password/recover" method="POST">
                                <div class="form-group">                                    
                                    <input type="email" name="email" class="form-control" id="signup-email" placeholder="Your Email">
                                </div>
                                <button type="submit" class="btn btn-primary btn-lg btn-block">RECOVER PASSWORD</button>
                                <%if(message !== null){%>
                                    <p class="text-center text-danger"><%=message%></p>
                                <% } %>
                                <div class="bottom">
                                    <span class="helper-text">Know your password? <a href="/auth/login">Login</a></span>
                                </div>
                            </form>
                        </div>
                    </div>
				</div>
			</div>
		</div>
  </div>
<%- include ('./partials/footer') -%>
  